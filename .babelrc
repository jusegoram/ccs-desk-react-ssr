{
  "presets": [
    // "next/babel", keep this file updated against https://github.com/zeit/next.js/blob/canary/.babelrc
    "react", // next/babel
    [
      "env",
      {
        "targets": {
          "node": "current",
          "browsers": [
            "last 2 Chrome versions",
            "last 2 ChromeAndroid versions",
            "last 2 Edge versions",
            "last 2 Firefox versions",
            "last 2 FirefoxAndroid versions",
            "last 2 iOS versions",
            "last 2 Opera versions",
            "last 2 Safari versions"
          ]
        }
      }
    ],
    "stage-0",
    "stage-1"
  ],
  "plugins": [
    "transform-object-rest-spread", // next/babel
    "transform-class-properties", // next/babel
    "transform-runtime", // next/babel
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "server": "./server",
          "app": "./app",
          "@root": ".",
          "^react-apollo$": "./node_modules/react-apollo/index.js",
          "^moment-timezone$": "./util/defaultedTzMoment.js"
        }
      }
    ],
    [
      "wrap-in-js",
      {
        "extensions": ["css$", "scss$"]
      }
    ],
    "transform-decorators-legacy"
  ]
}
